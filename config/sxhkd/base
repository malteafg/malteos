#==============================================================================
# BASE CONFIG

# LAUNCH PROGRAMS
F12
    menu

super + Return
	$TERMI

super + shift + Return
    ofwrapper -hend

super + {_, shift +} space
    ofwrapper {-hen,-n}

super + g
    brave

# MANAGE BSPWM
super + q
    dmenupower

# MOVEMENT
# cancel the preselection for the focused node
super + Escape
    bspc node -p cancel

# move workspace to monitor
super + {comma,period}
    desk=`bspc query -D -d focused`; \
    DIR={prev,next}; \
    bspc desktop -m "$DIR"; \
    bspc monitor -f "$DIR"; \
    bspc monitor -o a s r t v j u y f w d o x; \
    bspc desktop -f $desk

# AUDIO
XF86AudioPlay
    spotify_player playback play-pause
    # dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

XF86AudioPrev
    spotify_player playback previous
    # dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

shift + XF86AudioPrev
    spotify_player playback seek -- -10000

XF86AudioNext
    spotify_player playback next
    # dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

shift + XF86AudioNext
    spotify_player playback seek -- 10000
    
XF86AudioMute
    amixer -D pipewire sset Master toggle

XF86AudioRaiseVolume
    amixer -D pipewire sset Master 5%+

shift + XF86AudioRaiseVolume
    spotify_player playback volume --offset -- 5

XF86AudioLowerVolume
    amixer -D pipewire sset Master 5%-

shift + XF86AudioLowerVolume
    spotify_player playback volume --offset -- -5

# LAPTOP
XF86MonBrightnessUp
    xbacklight -inc 10

XF86MonBrightnessDown
    xbacklight -dec 10
